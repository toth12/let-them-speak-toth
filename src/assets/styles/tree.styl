/**
* Tree
**/

.tree .left {
  width: 320px;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  background-image: url('../images/memorial-sepia.jpg');
  padding: 10px;
  box-sizing: border-box;
  overflow: auto;
}

.tree .left .text {
  padding-top: 300px;
  padding-top: 30vh;
  color: #ddd;
}

.tree .right {
  width: 100%;
  padding-left: 320px;
  box-sizing: border-box;
  position: absolute;
  top: 80px;
  right: 0;
  bottom: 0;
  overflow: auto;
}

.tree .welcome {
  font-family: 'arno-pro', serif;
  font-size: 2.25em;
  color: #ccc;
  line-height: 1.05em;
  text-shadow: -2px 2px 4px rgba(0,0,0,0.6);
  text-align: center;
}